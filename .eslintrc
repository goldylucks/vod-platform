{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaversion": 6,
    "sourceType": "module", // allow using import export without breaking
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread":true,
      "modules": true
    }
  },
  "extends":   ["eslint:recommended", "plugin:react/recommended", "standard"],
  "plugins": [
    "babel",
    "react"
  ],
  "rules": {
    "strict": [2, "never"],
    "no-unused-vars": 1,
    "generator-star-spacing": 1,
    "babel/new-cap": 1,
    "object-shorthand": 1,
    "arrow-parens": 1,
    "babel/no-await-in-loop": 1,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2
  }
}
